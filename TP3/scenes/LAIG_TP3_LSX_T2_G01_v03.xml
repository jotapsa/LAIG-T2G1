<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position x="36" y="18" z="0.5" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light1">
          <enable value ="1" />
          <position x="0.5" y="18" z="36" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light2">
          <enable value ="1" />
          <position x="-36" y="18" z="0.5" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
          <enable value ="1" />
          <position x="0.5" y="18" z="-36" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light4">
          <enable value ="1" />
          <position x="0" y="20" z="0" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>



</LIGHTS>

<!-- Textures -->
<TEXTURES>
  <!-- Button -->
 <TEXTURE id="blackMarble">
     <file path="images/black_marble.jpg" />
     <amplif_factor s="0.1" t="0.2" />
 </TEXTURE>

 <TEXTURE id="tableCarpet">
     <file path="images/casino_green.jpg" />
     <amplif_factor s="0.1" t="0.2" />
 </TEXTURE>

 <TEXTURE id="tableAround">
     <file path="images/casino_wood.jpg" />
     <amplif_factor s="1" t="1" />
 </TEXTURE>

 <TEXTURE id="floorTexture">
     <file path="images/room_floor2.jpg" />
     <amplif_factor s="0.3" t="0.3" />
 </TEXTURE>


</TEXTURES>


<MATERIALS>
  <!-- A default material -->
  <MATERIAL id="defaultMaterial">
      <shininess value="1" />
      <specular r="0.0" g="0.0" b="0.0" a="1" />
      <diffuse r="0.4" g="0.4" b="0.4" a="1" />
      <ambient r="0.4" g="0.4" b="0.4" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
  </MATERIAL>
</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>

<!-- The animations -->
<ANIMATIONS>

  <ANIMATION id="goAround"  speed="2"   type="linear">
    <controlpoint   xx="0"   yy="0"   zz="0"   />
    <controlpoint   xx="5"   yy="0"   zz="0"   />
    <controlpoint   xx="5"    yy="0"    zz="-5"  />
    <controlpoint   xx="0"   yy="0"   zz="-5"   />
    <controlpoint   xx="0"   yy="0"   zz="0"   />
  </ANIMATION>

</ANIMATIONS>


<!-- The nodes -->
<NODES>
  <ROOT id="root" />

  <!-- The root node -->
  <NODE id="root">
    <MATERIAL id="defaultMaterial" />
    <TEXTURE id="floorTexture" />

    <DESCENDANTS>
      <NODEREF id="floor" />
      <NODEREF id="Draughts" />
      <NODEREF id="gameTable" />
    </DESCENDANTS>
  </NODE>

  <!-- The floor -->
  <NODE id="floor">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="-25" y="0" z="25" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 50 50 0" />
      </DESCENDANTS>
  </NODE>

  <NODE id="Draughts">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0" y="0.5" z="0" />

    <DESCENDANTS>
      <NODEREF id="buttons" />
      <LEAF type="board" args=""/>
    </DESCENDANTS>
  </NODE>

  <NODE id="buttons">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="button1" />
      <NODEREF id="button2" />
    </DESCENDANTS>
  </NODE>

  <NODE id="button1">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="8" y="0" z="0" />

    <DESCENDANTS>
      <LEAF type="button" args=""/>
    </DESCENDANTS>
  </NODE>

  <NODE id="button2">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-8" y="0" z="0" />

    <DESCENDANTS>
      <LEAF type="button" args=""/>
    </DESCENDANTS>
  </NODE>

  <NODE id="gameTable">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="tableTop" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableTop">
    <MATERIAL id="null" />
    <TEXTURE id="tableAround" />

    <TRANSLATION x="-6" y="0" z="-6" />
    <SCALE sx="3" sy="0.2" sz="3" />

    <DESCENDANTS>
      <NODEREF id="cube" />
    </DESCENDANTS>
  </NODE>

  <!-- Cube -->
  <NODE id="cube">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="2" y="0" z="4" />

      <DESCENDANTS>
          <NODEREF id="face1" />
          <NODEREF id="face2" />
          <NODEREF id="face3" />
          <NODEREF id="face4" />
          <NODEREF id="face5" />
          <NODEREF id="face6" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
   <NODE id="face2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

        <TRANSLATION x="-2" y="0" z="-2" />
        <ROTATION axis="y" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face3">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="2" y="0" z="-2" />
      <ROTATION axis="y" angle="90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face4">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <ROTATION axis="x" angle="-180" />
      <TRANSLATION x="0" y="0" z="4" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face5">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2" z="-2" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
     </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face6">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="-2" z="-2" />
      <ROTATION axis="x" angle="90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

</NODES>
</SCENE>
