<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
    <LIGHT id="light0">
          <enable value ="1" />
          <position x="0.5" y="18" z="36" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light1">
          <enable value ="1" />
          <position x="-36" y="18" z="0.5" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light2">
          <enable value ="1" />
          <position x="0" y="20" z="0" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>
</LIGHTS>

<!-- Textures -->
<TEXTURES>
  <!-- Button -->
 <TEXTURE id="blackMarble">
     <file path="images/black_marble.jpg" />
     <amplif_factor s="0.1" t="0.2" />
 </TEXTURE>

 <TEXTURE id="tableCarpet">
     <file path="images/casino_green.jpg" />
     <amplif_factor s="0.1" t="0.2" />
 </TEXTURE>

 <TEXTURE id="tableAround">
     <file path="images/room_wood.jpg" />
     <amplif_factor s="1" t="1" />
 </TEXTURE>

 <TEXTURE id="floorTexture">
     <file path="images/room_floor.jpg" />
     <amplif_factor s="0.1" t="0.1" />
 </TEXTURE>

 <TEXTURE id="logoLAIG">
     <file path="images/laig.png" />
     <amplif_factor s="1" t="1" />
 </TEXTURE>

 <TEXTURE id="aeroFEUP">
     <file path="images/aeroFEUP.jpg" />
     <amplif_factor s="1" t="1" />
 </TEXTURE>

 <TEXTURE id="earthTexture">
     <file path="images/earth.jpg" />
     <amplif_factor s="1" t="1" />
 </TEXTURE>

 <TEXTURE id="moonTexture">
     <file path="images/moon.jpg" />
     <amplif_factor s="1" t="1" />
 </TEXTURE>

</TEXTURES>


<MATERIALS>
  <!-- A default material -->
  <MATERIAL id="defaultMaterial">
      <shininess value="1" />
      <specular r="0.0" g="0.0" b="0.0" a="1" />
      <diffuse r="0.4" g="0.4" b="0.4" a="1" />
      <ambient r="0.4" g="0.4" b="0.4" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
  </MATERIAL>

  <!-- Abajur material -->
  <MATERIAL id="abajurMaterial">
      <shininess value="1" />
      <specular r="0.0" g="0.0" b="0.0" a="1" />
      <diffuse r="1" g="1" b="0.4" a="1" />
      <ambient r="0.4" g="0.4" b="0.4" a="1" />
      <emission r="0" g="0" b="0.0" a="1" />
  </MATERIAL>
</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>

<!-- The animations -->
<ANIMATIONS>

  <ANIMATION id="earthAnimation" speed="8" type="circular"
            centerx="0" centery="0" centerz="0"
            radius="15" startang="0" rotang="720"/>

  <ANIMATION id="moonAnimation" speed="10" type="circular"
            centerx="0" centery="0" centerz="0"
            radius="3" startang="0" rotang="4320"/>
</ANIMATIONS>


<!-- The nodes -->
<NODES>
  <ROOT id="root" />

  <!-- The root node -->
  <NODE id="root">
    <MATERIAL id="defaultMaterial" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="floor" />
      <NODEREF id="Draughts" />
      <NODEREF id="gameTable" />
      <NODEREF id="chairs" />
      <NODEREF id="TVs" />
      <NODEREF id="planets" />
    </DESCENDANTS>
  </NODE>

  <!-- The floor -->
  <NODE id="floor">
      <MATERIAL id="null" />
      <TEXTURE id="floorTexture" />

      <TRANSLATION x="-25" y="0" z="25" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 50 50 0" />
      </DESCENDANTS>
  </NODE>

  <NODE id="Draughts">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0" y="11" z="0" />

    <DESCENDANTS>
      <NODEREF id="buttons" />
      <NODEREF id="auxBoards" />
      <LEAF type="board" args=""/>
    </DESCENDANTS>
  </NODE>

  <NODE id="buttons">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="button1" />
      <NODEREF id="button2" />
    </DESCENDANTS>
  </NODE>

  <NODE id="button1">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="8" y="0" z="0" />

    <DESCENDANTS>
      <LEAF type="button" args="blacks"/>
    </DESCENDANTS>
  </NODE>

  <NODE id="button2">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-8" y="0" z="0" />

    <DESCENDANTS>
      <LEAF type="button" args="whites"/>
    </DESCENDANTS>
  </NODE>

  <NODE id="auxBoards">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="auxBoardBlacks" />
      <NODEREF id="auxBoardWhites" />
    </DESCENDANTS>
  </NODE>

  <NODE id="auxBoardWhites">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0" y="0" z="-6"/>

    <DESCENDANTS>
      <LEAF type="boardaux" args="0"/>
    </DESCENDANTS>
  </NODE>

  <NODE id="auxBoardBlacks">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0" y="0" z="6"/>

    <DESCENDANTS>
      <LEAF type="boardaux" args="1"/>
    </DESCENDANTS>
  </NODE>

  <NODE id="gameTable">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="tableTop" />
      <NODEREF id="tableLegs" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableTop">
    <MATERIAL id="null" />
    <TEXTURE id="tableAround" />

    <TRANSLATION x="-10" y="10.5" z="-8" />
    <SCALE sx="5" sy="0.25" sz="4" />

    <DESCENDANTS>
      <NODEREF id="cube" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableLegs">
    <MATERIAL id="null" />
    <TEXTURE id="tableAround" />

    <DESCENDANTS>
      <NODEREF id="tableLegsBase" />
      <NODEREF id="tableLegsBody" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableLegsBase">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="x" angle="-90" />

    <DESCENDANTS>
      <LEAF type="cylinder" args="1 3 3 30 30 1 1" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableLegsBody">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="x" angle="-90" />

    <DESCENDANTS>
      <LEAF type="cylinder" args="10 1 1 30 30 1 1" />
    </DESCENDANTS>
  </NODE>

  <!-- Leg -->
  <NODE id="leg">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <SCALE sx="0.1" sy="1" sz="0.1" />

      <DESCENDANTS>
          <NODEREF id="cube" />
      </DESCENDANTS>
  </NODE>

  <!-- Cube -->
  <NODE id="cube">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="2" y="0" z="4" />

      <DESCENDANTS>
          <NODEREF id="face1" />
          <NODEREF id="face2" />
          <NODEREF id="face3" />
          <NODEREF id="face4" />
          <NODEREF id="face5" />
          <NODEREF id="face6" />
      </DESCENDANTS>
  </NODE>

  <!-- Chairs -->
  <NODE id="chairs">
    <MATERIAL id="null" />
    <TEXTURE id="tableAround" />


    <DESCENDANTS>
        <NODEREF id="chair1" />
        <NODEREF id="chair2" />
    </DESCENDANTS>
  </NODE>

  <!-- First chair -->
  <NODE id="chair1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="3" y="0" z="-12" />
      <ROTATION axis="y" angle="-180" />

      <DESCENDANTS>
          <NODEREF id="chair" />
      </DESCENDANTS>
  </NODE>

  <!-- Second chair -->
  <NODE id="chair2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="-3" y="0" z="12" />

      <DESCENDANTS>
          <NODEREF id="chair" />
      </DESCENDANTS>
  </NODE>

  <!-- Generic chair -->
  <NODE id="chair">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <SCALE sx="3" sy="3" sz="3" />

      <DESCENDANTS>
        <NODEREF id="chair_base" />
        <NODEREF id="chair_back" />
        <NODEREF id="chair_legs" />
        <NODEREF id="chair_arms" />
      </DESCENDANTS>
  </NODE>

  <!-- Chair Top Bottom -->
  <NODE id="chair_base">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2.6" z="0" />
      <SCALE sx="0.55" sy="0.1" sz="0.425" />

      <DESCENDANTS>
        <NODEREF id="cube" />
      </DESCENDANTS>
  </NODE>

  <!-- Chair Top Back -->
  <NODE id="chair_back">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2.8" z="4.1" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <NODEREF id="chair_base" />
      </DESCENDANTS>
  </NODE>

  <!-- Chair Arms -->
  <NODE id="chair_arms">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2.8" z="0.7" />

      <DESCENDANTS>
        <NODEREF id="chair_arm1" />
        <NODEREF id="chair_arm2" />
      </DESCENDANTS>
  </NODE>

  <!-- Chair Arm 1 -->
  <NODE id="chair_arm1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <NODEREF id="chair_arm" />
      </DESCENDANTS>
  </NODE>

  <!-- Chair Arm 2 -->
  <NODE id="chair_arm2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="2" y="0" z="0" />

      <DESCENDANTS>
        <NODEREF id="chair_arm" />
      </DESCENDANTS>
  </NODE>

  <!-- Chair Arm -->
  <NODE id="chair_arm">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <ROTATION axis="x" angle="-90" />
      <SCALE sx="0.05" sy="0.35" sz="0.1" />

      <DESCENDANTS>
        <NODEREF id="cube" />
      </DESCENDANTS>
  </NODE>

  <!-- Table Legs -->
  <NODE id="chair_legs">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <SCALE sx="0.5" sy="0.65" sz="0.5" />

      <DESCENDANTS>
          <NODEREF id="chair_leg1" />
          <NODEREF id="chair_leg2" />
          <NODEREF id="chair_leg3" />
          <NODEREF id="chair_leg4" />
      </DESCENDANTS>
  </NODE>

  <!-- First Chair Leg -->
  <NODE id="chair_leg1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2" z="0" />

      <DESCENDANTS>
          <NODEREF id="leg" />
      </DESCENDANTS>
  </NODE>

  <!-- Second Chair Leg -->
  <NODE id="chair_leg2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="4" y="2" z="0" />

      <DESCENDANTS>
          <NODEREF id="leg" />
      </DESCENDANTS>
  </NODE>

  <!-- Third Chair Leg -->
  <NODE id="chair_leg3">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="4" y="2" z="3" />

      <DESCENDANTS>
          <NODEREF id="leg" />
      </DESCENDANTS>
  </NODE>

  <!-- Fourth Chair Leg -->
  <NODE id="chair_leg4">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2" z="3" />

      <DESCENDANTS>
          <NODEREF id="leg" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
   <NODE id="face2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

        <TRANSLATION x="-2" y="0" z="-2" />
        <ROTATION axis="y" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face3">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="2" y="0" z="-2" />
      <ROTATION axis="y" angle="90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face4">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <ROTATION axis="x" angle="-180" />
      <TRANSLATION x="0" y="0" z="4" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face5">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2" z="-2" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
     </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face6">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="-2" z="-2" />
      <ROTATION axis="x" angle="90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- TVs -->
  <NODE id="TVs">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <NODEREF id="TV1" />
        <NODEREF id="TV2" />
      </DESCENDANTS>
  </NODE>

  <!-- TV 1 -->
  <NODE id="TV1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="20" y="0" z="-22" />
      <ROTATION axis="y" angle="-45" />

      <DESCENDANTS>
        <NODEREF id="baseTV" />
        <NODEREF id="bodyTV" />
        <NODEREF id="screenTV1" />
      </DESCENDANTS>
  </NODE>

  <!-- TV 1 -->
  <NODE id="TV2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="-20" y="0" z="22" />
      <ROTATION axis="y" angle="135" />

      <DESCENDANTS>
        <NODEREF id="baseTV" />
        <NODEREF id="bodyTV" />
        <NODEREF id="screenTV2" />
      </DESCENDANTS>
  </NODE>

  <!-- Base TV -->
  <NODE id="baseTV">
      <MATERIAL id="null" />
      <TEXTURE id="tableAround" />

      <SCALE sx="1" sy="0.2" sz="1" />

      <DESCENDANTS>
        <NODEREF id="cube" />
      </DESCENDANTS>
  </NODE>

  <!-- Body TV -->
  <NODE id="bodyTV">
      <MATERIAL id="null" />
      <TEXTURE id="tableAround" />

      <TRANSLATION x="2" y="15" z="2" />
      <ROTATION axis="x" angle="90" />

      <DESCENDANTS>
        <LEAF type="cylinder" args="15 0.5 0.5 30 30 1 1" />
      </DESCENDANTS>
  </NODE>

  <!-- Screen TV 1-->
  <NODE id="screenTV1">
      <MATERIAL id="null" />
      <TEXTURE id="tableAround" />

      <!-- 10/5.65 -->
      <TRANSLATION x="-3" y="15" z="2.5" />
      <SCALE sx="2.5" sy="1.4125" sz="0.05" />

      <DESCENDANTS>
        <NODEREF id="cube" />
        <NODEREF id="logoTV1" />
      </DESCENDANTS>
  </NODE>

  <!-- Screen TV2 -->
  <NODE id="screenTV2">
      <MATERIAL id="null" />
      <TEXTURE id="tableAround" />

      <!-- 10/5.65 -->
      <TRANSLATION x="-3" y="15" z="2.5" />
      <SCALE sx="2.5" sy="1.4125" sz="0.05" />

      <DESCENDANTS>
        <NODEREF id="cube" />
        <NODEREF id="logoTV2" />
      </DESCENDANTS>
  </NODE>

  <!-- Logo TV -->
  <NODE id="logoTV1">
      <MATERIAL id="null" />
      <TEXTURE id="aeroFEUP" />

      <TRANSLATION x="0.1" y="0" z="0.1" />
      <SCALE sx="0.95" sy="0.90" sz="1" />

      <DESCENDANTS>
        <NODEREF id="cube" />
      </DESCENDANTS>
  </NODE>

  <!-- Logo TV -->
  <NODE id="logoTV2">
      <MATERIAL id="null" />
      <TEXTURE id="logoLAIG" />

      <TRANSLATION x="0.1" y="0" z="0.1" />
      <SCALE sx="0.95" sy="0.90" sz="1" />

      <DESCENDANTS>
        <NODEREF id="cube" />
      </DESCENDANTS>
  </NODE>

  <!-- Planets -->
  <NODE id="planets">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="20" z="0" />

      <DESCENDANTS>
        <NODEREF id="earth" />
      </DESCENDANTS>
  </NODE>

  <!-- Earth -->
  <NODE id="earth">
      <MATERIAL id="null" />
      <TEXTURE id="earthTexture" />

      <ANIMATIONREFS>
        <ANIMATIONREF id="earthAnimation" />
      </ANIMATIONREFS>

      <DESCENDANTS>
        <LEAF type="sphere" args="1.5 30 30" />
        <NODEREF id="moon" />
      </DESCENDANTS>
  </NODE>

  <!-- Moon -->
  <NODE id="moon">
      <MATERIAL id="null" />
      <TEXTURE id="moonTexture" />

      <ANIMATIONREFS>
        <ANIMATIONREF id="moonAnimation" />
      </ANIMATIONREFS>

      <DESCENDANTS>
        <LEAF type="sphere" args="0.5 30 30" />
      </DESCENDANTS>
  </NODE>

  </NODES>
</SCENE>
