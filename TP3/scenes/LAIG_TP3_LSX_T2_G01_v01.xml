<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position x="36" y="18" z="0.5" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light1">
          <enable value ="1" />
          <position x="0.5" y="18" z="36" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light2">
          <enable value ="1" />
          <position x="0" y="20" z="0" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
  <!-- Button -->
 <TEXTURE id="blackMarble">
     <file path="images/black_marble.jpg" />
     <amplif_factor s="0.1" t="0.2" />
 </TEXTURE>

 <TEXTURE id="tableCarpet">
     <file path="images/casino_green.jpg" />
     <amplif_factor s="0.1" t="0.2" />
 </TEXTURE>

 <TEXTURE id="tableAround">
     <file path="images/casino_wood.jpg" />
     <amplif_factor s="1" t="1" />
 </TEXTURE>

 <TEXTURE id="floorTexture">
     <file path="images/blue_floor.jpg" />
     <amplif_factor s="1" t="1" />
 </TEXTURE>


</TEXTURES>


<MATERIALS>
  <!-- A default material -->
  <MATERIAL id="defaultMaterial">
      <shininess value="1" />
      <specular r="0.0" g="0.0" b="0.0" a="1" />
      <diffuse r="0.4" g="0.4" b="0.4" a="1" />
      <ambient r="0.4" g="0.4" b="0.4" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
  </MATERIAL>
</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>

<!-- The animations -->
<ANIMATIONS>

  <ANIMATION id="goAround"  speed="2"   type="linear">
    <controlpoint   xx="0"   yy="0"   zz="0"   />
    <controlpoint   xx="5"   yy="0"   zz="0"   />
    <controlpoint   xx="5"    yy="0"    zz="-5"  />
    <controlpoint   xx="0"   yy="0"   zz="-5"   />
    <controlpoint   xx="0"   yy="0"   zz="0"   />
  </ANIMATION>

</ANIMATIONS>


<!-- The nodes -->
<NODES>
  <ROOT id="root" />

  <!-- The root node -->
  <NODE id="root">
    <MATERIAL id="defaultMaterial" />
    <TEXTURE id="floorTexture" />

    <DESCENDANTS>
      <NODEREF id="floor" />
      <NODEREF id="Draughts" />
      <NODEREF id="gameTable" />
      <NODEREF id="chairs" />
    </DESCENDANTS>
  </NODE>

  <!-- The floor -->
  <NODE id="floor">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="-25" y="0" z="25" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="0 50 50 0" />
      </DESCENDANTS>
  </NODE>

  <NODE id="Draughts">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0" y="11" z="0" />

    <DESCENDANTS>
      <NODEREF id="buttons" />
      <NODEREF id="auxBoards" />
      <LEAF type="board" args=""/>
    </DESCENDANTS>
  </NODE>

  <NODE id="buttons">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="button1" />
      <NODEREF id="button2" />
    </DESCENDANTS>
  </NODE>

  <NODE id="button1">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="10" y="0" z="0" />

    <DESCENDANTS>
      <LEAF type="button" args=""/>
    </DESCENDANTS>
  </NODE>

  <NODE id="button2">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="-10" y="0" z="0" />

    <DESCENDANTS>
      <LEAF type="button" args=""/>
    </DESCENDANTS>
  </NODE>

  <NODE id="auxBoards">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="auxBoardBlacks" />
      <NODEREF id="auxBoardWhites" />
    </DESCENDANTS>
  </NODE>

  <NODE id="auxBoardWhites">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0" y="0" z="-6"/>

    <DESCENDANTS>
      <LEAF type="boardaux" args="0"/>
    </DESCENDANTS>
  </NODE>

  <NODE id="auxBoardBlacks">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <TRANSLATION x="0" y="0" z="6"/>

    <DESCENDANTS>
      <LEAF type="boardaux" args="1"/>
    </DESCENDANTS>
  </NODE>

  <NODE id="gameTable">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="tableTop" />
      <NODEREF id="tableTopCarpet" />
      <NODEREF id="tableLegs" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableTop">
    <MATERIAL id="null" />
    <TEXTURE id="tableAround" />

    <TRANSLATION x="0" y="10" z="0" />
    <ROTATION axis="x" angle="-90" />
    <SCALE sx="1.5" sy="1" sz="1" />

    <DESCENDANTS>
      <LEAF type="cylinder" args="1 10 10 30 30 1 1" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableTopCarpet">
    <MATERIAL id="null" />
    <TEXTURE id="tableCarpet" />

    <TRANSLATION x="0" y="11" z="0" />
    <ROTATION axis="x" angle="-90" />
    <SCALE sx="1.5" sy="1" sz="1" />

    <DESCENDANTS>
      <LEAF type="cylinder" args="0.1 10 10 30 30 1 1" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableLegs">
    <MATERIAL id="null" />
    <TEXTURE id="tableAround" />

    <DESCENDANTS>
      <NODEREF id="tableLegsBase" />
      <NODEREF id="tableLegsBody" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableLegsBase">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="x" angle="-90" />

    <DESCENDANTS>
      <LEAF type="cylinder" args="1 3 3 30 30 1 1" />
    </DESCENDANTS>
  </NODE>

  <NODE id="tableLegsBody">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <ROTATION axis="x" angle="-90" />

    <DESCENDANTS>
      <LEAF type="cylinder" args="10 1 1 30 30 1 1" />
    </DESCENDANTS>
  </NODE>

  <!-- Leg -->
  <NODE id="leg">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <SCALE sx="0.1" sy="1" sz="0.1" />

      <DESCENDANTS>
          <NODEREF id="cube" />
      </DESCENDANTS>
  </NODE>

  <!-- Cube -->
  <NODE id="cube">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="2" y="0" z="4" />

      <DESCENDANTS>
          <NODEREF id="face1" />
          <NODEREF id="face2" />
          <NODEREF id="face3" />
          <NODEREF id="face4" />
          <NODEREF id="face5" />
          <NODEREF id="face6" />
      </DESCENDANTS>
  </NODE>

  <!-- Chairs -->
  <NODE id="chairs">
    <MATERIAL id="null" />
    <TEXTURE id="tableAround" />


    <DESCENDANTS>
        <NODEREF id="chair1" />
        <NODEREF id="chair2" />
    </DESCENDANTS>
  </NODE>

  <!-- First chair -->
  <NODE id="chair1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="3" y="0" z="-12" />
      <ROTATION axis="y" angle="-180" />

      <DESCENDANTS>
          <NODEREF id="chair" />
      </DESCENDANTS>
  </NODE>

  <!-- Second chair -->
  <NODE id="chair2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="-3" y="0" z="12" />

      <DESCENDANTS>
          <NODEREF id="chair" />
      </DESCENDANTS>
  </NODE>

  <!-- Generic chair -->
  <NODE id="chair">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <SCALE sx="3" sy="3" sz="3" />

      <DESCENDANTS>
        <NODEREF id="chair_base" />
        <NODEREF id="chair_back" />
        <NODEREF id="chair_legs" />
      </DESCENDANTS>
  </NODE>

  <!-- Chair Top Bottom -->
  <NODE id="chair_base">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2.6" z="0" />
      <SCALE sx="0.55" sy="0.1" sz="0.425" />

      <DESCENDANTS>
        <NODEREF id="cube" />
      </DESCENDANTS>
  </NODE>

  <!-- Chair Top Back -->
  <NODE id="chair_back">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2.8" z="4.1" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <NODEREF id="chair_base" />
      </DESCENDANTS>
  </NODE>

  <!-- Table Legs -->
  <NODE id="chair_legs">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <SCALE sx="0.5" sy="0.65" sz="0.5" />

      <DESCENDANTS>
          <NODEREF id="chair_leg1" />
          <NODEREF id="chair_leg2" />
          <NODEREF id="chair_leg3" />
          <NODEREF id="chair_leg4" />
      </DESCENDANTS>
  </NODE>

  <!-- First Chair Leg -->
  <NODE id="chair_leg1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2" z="0" />

      <DESCENDANTS>
          <NODEREF id="leg" />
      </DESCENDANTS>
  </NODE>

  <!-- Second Chair Leg -->
  <NODE id="chair_leg2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="4" y="2" z="0" />

      <DESCENDANTS>
          <NODEREF id="leg" />
      </DESCENDANTS>
  </NODE>

  <!-- Third Chair Leg -->
  <NODE id="chair_leg3">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="4" y="2" z="3" />

      <DESCENDANTS>
          <NODEREF id="leg" />
      </DESCENDANTS>
  </NODE>

  <!-- Fourth Chair Leg -->
  <NODE id="chair_leg4">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2" z="3" />

      <DESCENDANTS>
          <NODEREF id="leg" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face1">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
   <NODE id="face2">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

        <TRANSLATION x="-2" y="0" z="-2" />
        <ROTATION axis="y" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face3">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="2" y="0" z="-2" />
      <ROTATION axis="y" angle="90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face4">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <ROTATION axis="x" angle="-180" />
      <TRANSLATION x="0" y="0" z="4" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face5">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="2" z="-2" />
      <ROTATION axis="x" angle="-90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
     </DESCENDANTS>
  </NODE>

  <!-- leg face -->
  <NODE id="face6">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

      <TRANSLATION x="0" y="-2" z="-2" />
      <ROTATION axis="x" angle="90" />

      <DESCENDANTS>
        <LEAF  type="rectangle" args="-2 2 2 -2" />
      </DESCENDANTS>
  </NODE>

</NODES>
</SCENE>
