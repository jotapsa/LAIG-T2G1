<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position x="36" y="18" z="0.5" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light1">
          <enable value ="1" />
          <position x="0.5" y="18" z="36" w="1" />
          <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
          <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
          <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
  <!-- Floor -->
 <TEXTURE id="blackMarble">
     <file path="images/black_marble.jpg" />
     <amplif_factor s="0.1" t="0.2" />
 </TEXTURE>
</TEXTURES>


<MATERIALS>
  <!-- A default material -->
  <MATERIAL id="defaultMaterial">
      <shininess value="1" />
      <specular r="0.0" g="0.0" b="0.0" a="1" />
      <diffuse r="0.4" g="0.4" b="0.4" a="1" />
      <ambient r="0.4" g="0.4" b="0.4" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
  </MATERIAL>
</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>

<!-- The animations -->
<ANIMATIONS>

  <ANIMATION id="goAround"  speed="2"   type="linear">
    <controlpoint   xx="0"   yy="0"   zz="0"   />
    <controlpoint   xx="5"   yy="0"   zz="0"   />
    <controlpoint   xx="5"    yy="0"    zz="-5"  />
    <controlpoint   xx="0"   yy="0"   zz="-5"   />
    <controlpoint   xx="0"   yy="0"   zz="0"   />
  </ANIMATION>

</ANIMATIONS>


<!-- The nodes -->
<NODES>
  <ROOT id="root" />

  <!-- The root node -->
  <NODE id="root">
    <MATERIAL id="defaultMaterial" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <NODEREF id="board" />
    </DESCENDANTS>
  </NODE>

  <!-- The Board -->
  <NODE id="board">
    <MATERIAL id="null" />
    <TEXTURE id="null" />

    <DESCENDANTS>
      <LEAF type="board" args=""/>
    </DESCENDANTS>
  </NODE>

</NODES>
</SCENE>
