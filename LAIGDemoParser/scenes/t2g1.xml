<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="30" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
	<!-- Window -->
    <TEXTURE id="window">
        <file path="images/window.jpg" />
        <amplif_factor s="2" t="2" />
    </TEXTURE>

     <!-- Floor -->
    <TEXTURE id="floor">
        <file path="images/floor.jpg" />
        <amplif_factor s="3" t="4" />
    </TEXTURE>

    <!-- Wood -->
    <TEXTURE id="wood">
        <file path="images/wood.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <!-- Black-Board -->
    <TEXTURE id="board">
        <file path="images/black_board.jpg" />
        <amplif_factor s="15" t="10" />
    </TEXTURE>

    <!-- Walls -->
    <TEXTURE id="wall">
        <file path="images/wall.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <!-- Tree -->
    <TEXTURE id="tree">
        <file path="images/tree.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

</TEXTURES>


<MATERIALS>
	<!-- Window Material -->
    <MATERIAL id="windowMaterial">
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />
        <diffuse r="1.0" g="0.68" b="0.4" a="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

	<!-- Floor material -->
	<MATERIAL id="floorMaterial">
        <shininess value="1" />
        <specular r="0.2" g="0.2" b="0.2" a="1" />
        <diffuse r="0.0" g="0.207" b="0.0" a="1" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Light material -->
    <MATERIAL id="lightMaterial">
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

	<!-- Wood material -->
	<MATERIAL id="woodMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.6" g="0.298" b="0.0" a="1" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Board material -->
    <MATERIAL id="boardMaterial">
        <shininess value="100" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.447" g="0.416" b="0.416" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Wall material -->
    <MATERIAL id="wallMaterial">
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Tree material -->
    <MATERIAL id="treeMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />

        <DESCENDANTS>

            <NODEREF id="windows" />
            <NODEREF id="floor" />
            <NODEREF id="lights" />
            <NODEREF id="tables" />
            <NODEREF id="chairs" />
            <NODEREF id="board" />
            <NODEREF id="walls" />
            <NODEREF id="tree" />
        </DESCENDANTS>

    </NODE>

    <!-- The windows -->
    <NODE id="windows">
        <MATERIAL id="windowMaterial" />
        <TEXTURE id="window" />

        <DESCENDANTS>
					<NODEREF id="window1" />
          <NODEREF id="window2" />
				</DESCENDANTS>

    </NODE>

    <!-- The first window -->
     <NODE id="window1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="window" />
        </DESCENDANTS>

    </NODE>

    <!-- The second window -->
     <NODE id="window2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="window" />
        </DESCENDANTS>

    </NODE>

    <!-- Window -->
    <NODE id="window">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" /> -->

        <DESCENDANTS>
						<LEAF type="rectangle" args="0 3 3 0" />
        </DESCENDANTS>
    </NODE>

    <!-- The floor -->
    <NODE id="floor">
        <MATERIAL id="floorMaterial" />
        <TEXTURE id="floor" />

        <SCALE sx="6" sy="1" sz="5" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 5 5 0" />
				</DESCENDANTS>
    </NODE>

    <!-- The lights -->
     <NODE id="lights">
        <MATERIAL id="lightMaterial" />
        <TEXTURE id="clear" />

        <DESCENDANTS>
            <NODEREF id="light1" />
            <NODEREF id="light2" />
        </DESCENDANTS>

    </NODE>

    <!-- The first light -->
     <NODE id="light1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="light_sphere" />
        </DESCENDANTS>

    </NODE>

    <!-- The second light -->
    <NODE id="light2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="20" />

        <DESCENDANTS>
           <NODEREF id="light_sphere" />
        </DESCENDANTS>

    </NODE>

    <!-- Light bulb -->
    <NODE id="light_sphere">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" />

        <DESCENDANTS>
						<LEAF type="sphere" args="2 20 20" />
        </DESCENDANTS>
    </NODE>

    <!-- Classroom tables -->
    <NODE id="tables">
        <MATERIAL id="woodMaterial" />
        <TEXTURE id="wood" />

        <DESCENDANTS>
       		<NODEREF id="table1" />
          <NODEREF id="table2" />
          <NODEREF id="table3" />
        </DESCENDANTS>

    </NODE>

    <!-- First table -->
    <NODE id="table1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="7.5" y="-2" z="21" /> -->

        <DESCENDANTS>
            <NODEREF id="table" />
        </DESCENDANTS>

    </NODE>

    <!-- Second table -->
    <NODE id="table2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="7.5" y="-2" z="21" /> -->

        <DESCENDANTS>
            <NODEREF id="table" />
        </DESCENDANTS>

    </NODE>

    <!-- Third table -->
    <NODE id="table3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="7.5" y="-2" z="21" /> -->

        <DESCENDANTS>
            <NODEREF id="table" />
        </DESCENDANTS>

    </NODE>

    <!-- Generic table -->
    <NODE id="table">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <ROTATION axis="y" angle="90" />
        <SCALE sx="0.5" sy="0.5" sz="1.5" /> -->

        <DESCENDANTS>
       		<NODEREF id="table_top" />
          <NODEREF id="table_legs" />
        </DESCENDANTS>

    </NODE>

    <!-- Table Top -->
    <NODE id="table_top">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" /> -->

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 3 3 0" />
        </DESCENDANTS>
    </NODE>

    <!-- Table Legs -->
    <NODE id="table_legs">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="table_leg1" />
            <NODEREF id="table_leg2" />
            <NODEREF id="table_leg3" />
            <NODEREF id="table_leg4" />
        </DESCENDANTS>

    </NODE>

    <!-- First Leg -->
    <NODE id="table_leg1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" /> -->

        <DESCENDANTS>
            <NODEREF id="table_leg" />
        </DESCENDANTS>
    </NODE>

    <!-- Second Leg -->
    <NODE id="table_leg2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" /> -->

        <DESCENDANTS>
            <NODEREF id="table_leg" />
        </DESCENDANTS>
    </NODE>

    <!-- Third Leg -->
    <NODE id="table_leg3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" /> -->

        <DESCENDANTS>
            <NODEREF id="table_leg" />
        </DESCENDANTS>
    </NODE>

    <!-- Fourth Leg -->
    <NODE id="table_leg4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" /> -->

        <DESCENDANTS>
            <NODEREF id="table_leg" />
        </DESCENDANTS>
    </NODE>

    <!-- Table Leg -->
    <NODE id="table_leg">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 3 3 0" />
        </DESCENDANTS>
    </NODE>

    <!-- Chairs -->
    <NODE id="chairs">
      <MATERIAL id="woodMaterial" />
      <TEXTURE id="wood" />

        <DESCENDANTS>
            <NODEREF id="chair1" />
            <NODEREF id="chair2" />
        </DESCENDANTS>

    </NODE>

    <!-- First chair -->
    <NODE id="chair1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="-2" y="0" z="5" /> -->

        <DESCENDANTS>
            <NODEREF id="chair" />
        </DESCENDANTS>

    </NODE>

    <!-- Second chair -->
    <NODE id="chair2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="22" y="0" z="5" /> -->

        <DESCENDANTS>
            <NODEREF id="chair" />
        </DESCENDANTS>

    </NODE>

    <!-- Generic chair -->
    <NODE id="chair">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <!-- <NODEREF id="troncoArvore" />
            <NODEREF id="folhasArvore" /> -->
        </DESCENDANTS>

    </NODE>

    <!-- Black Board -->
    <NODE id="board">
        <MATERIAL id="boardMaterial" />
        <TEXTURE id="board" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 3 3 0" />
        </DESCENDANTS>
    </NODE>

    <!-- Walls -->
    <NODE id="walls">
      <MATERIAL id="wallMaterial" />
      <TEXTURE id="wall" />

        <DESCENDANTS>
            <NODEREF id="wall1" />
            <NODEREF id="wall2" />
        </DESCENDANTS>

    </NODE>

    <!-- First Wall -->
    <NODE id="wall1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="22" y="0" z="5" /> -->

        <DESCENDANTS>
            <NODEREF id="wall" />
        </DESCENDANTS>

    </NODE>

    <!-- Second Wall -->
    <NODE id="wall2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <!-- <TRANSLATION x="22" y="0" z="5" /> -->

        <DESCENDANTS>
            <NODEREF id="wall" />
        </DESCENDANTS>

    </NODE>

    <!-- Generic Wall -->
    <NODE id="wall">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <LEAF type="rectangle" args="0 7 7 0" />
        </DESCENDANTS>
    </NODE>

    <!-- Tree -->
    <NODE id="tree">
      <MATERIAL id="null" />
      <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="tree_trunk" />
            <NODEREF id="tree_body" />
        </DESCENDANTS>

    </NODE>

    <!-- Tree trunk -->
    <NODE id="tree_trunk">
        <MATERIAL id="woodMaterial" />
        <TEXTURE id="wood" />

        <ROTATION axis="x" angle="90" />
        <TRANSLATION x="5" y="5" z="-4" />

        <DESCENDANTS>
					<LEAF type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>

    </NODE>

    <!-- Tree body -->
     <NODE id="tree_body">
        <MATERIAL id="treeMaterial" />
        <TEXTURE id="tree" />

        <DESCENDANTS>
          <!-- ----cone---- -->
          <LEAF type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>

    </NODE>

</NODES>

</SCENE>
